{
    "name": "pwa", // Splash screen name
    "short_name": "pwa", // App name
    "theme_color": "#4DBA87", //Color del tema de la barra
    "icons": [ //este es un vector de los iconos que se mostrara segun el dispositivo que estemos utilizando ya sea tablet celular escritorio etc por eso se muestran en diff tamaños
        {
            "src": "./img/icons/android-chrome-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "./img/icons/android-chrome-512x512.png",
            "sizes": "512x512",
            "type": "image/png"
        },
        {
            "src": "./img/icons/android-chrome-maskable-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "./img/icons/android-chrome-maskable-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "start_url": ".", //la url inicial que va cargar la pwa - digamos que la pwa no queremos que cargue la raiz sino digamos una ruta app asi seria --> ./app
    "display": "standalone", //Es el formato en el cual se va mostrar la aplicacion --> standalone se va mostrar como si fuese una app nativa va mostrar en la parte de arriba el porcentaje de la bateria la hora que es no va mostrar barra de navegacion asi cosas -- otra es la fullscreen esta no simula ser una app sino que directamente se ejecuta en pantalla completa y borra esa barrra de navegacion -- otra es browser en la que se va abrir en una pestaña del navegador -- minimal-ui se va mostrar como un standalone pero con minimos elementos que podramos aplicar del navegador por ejemplo en botos hacia atras del navegador
    "background_color": "#000000"
}